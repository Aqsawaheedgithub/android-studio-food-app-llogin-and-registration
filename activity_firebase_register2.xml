<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirebaseRegisterActivity2"
    android:background="@color/design_default_color_primary"

    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="#D65682"
        android:text="@string/register_here"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_register"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:background="#54B0BC"
        android:hint="@string/myyy"

        android:minHeight="48dp"
        android:textColor="#131313"
        android:textColorHint="#263238"
        android:textSize="20sp"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:background="#54B0BC"
        android:hint="@string/passs"
        android:minHeight="48dp"
        android:textColor="#121111"
        android:textColorHint="#263238"
        android:textSize="20sp"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="20dp"
        android:background="#D65682"
        android:text="@string/register"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="379dp"
        android:layout_height="43dp"
        android:layout_below="@+id/register"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:background="#D65682"
        android:text="@string/existing_user_login"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


</RelativeLayout>